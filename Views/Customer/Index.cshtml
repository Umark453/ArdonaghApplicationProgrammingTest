@model List<CustomerManagement.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<a asp-action="Create" class="btn btn-primary">Add Customer</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Post Code</th>
            <th>Height (m)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Age</td>
                <td>@customer.PostCode</td>
                <td>@customer.Height.ToString("0.00")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-secondary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>